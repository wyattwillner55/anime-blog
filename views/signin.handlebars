<form id="login-form" class="box">
  <div class="field">
    <label class="label">email</label>
    <div class="control">
      <input id="username-login" class="input" type="text" placeholder="e.g. alex@example.com">
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <input id="password-login" class="input" type="password" placeholder="********">
    </div>
  </div>

  <button class="button is-primary">Sign in</button>

  <div class="signup-link">
      <a href="/signup">Sign up here!</a>
    </div>

</form>

